generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  RESPONSIBLE
  PROFESSOR
  STUDENT
}

enum GradeStatus {
  DRAFT
  SUBMITTED
  VALIDATED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  
  // Relations
  student      Student?
  professor    Professor?
  responsible  Responsible?
  logs         Log[]
}

model Student {
  id         String   @id @default(cuid())
  studentId  String   @unique
  userId     String   @unique
  formationId String
  createdAt  DateTime @default(now())
  
  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  formation  Formation @relation(fields: [formationId], references: [id])
  grades     Grade[]
}

model Professor {
  id          String   @id @default(cuid())
  professorId String   @unique
  userId      String   @unique
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courses     Course[]
}

model Responsible {
  id          String    @id @default(cuid())
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id])
  formationId String    @unique  //! Ajoute @unique
  formation   Formation @relation(fields: [formationId], references: [id])
}

model Department {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  
  formations Formation[]
}

model Formation {
  id           String   @id @default(cuid())
  name         String   @unique
  departmentId String
  createdAt    DateTime @default(now())
  
  department   Department @relation(fields: [departmentId], references: [id])
  students     Student[]
  courses      Course[]
  responsible  Responsible?
}

model Course {
  id          String   @id @default(cuid())
  name        String
  formationId String
  professorId String
  
  formation   Formation @relation(fields: [formationId], references: [id])
  professor   Professor @relation(fields: [professorId], references: [id])
  grades      Grade[]
}

model Grade {
  id         String     @id @default(cuid())
  value      Float
  studentId  String
  courseId   String
  status     GradeStatus @default(DRAFT)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  
  student    Student    @relation(fields: [studentId], references: [id])
  course     Course     @relation(fields: [courseId], references: [id])
  scan       Scan?
}

model Scan {
  id        String   @id @default(cuid())
  filename  String
  path      String
  gradeId   String   @unique
  
  grade     Grade    @relation(fields: [gradeId], references: [id], onDelete: Cascade)
}

model Log {
  id        String   @id @default(cuid())
  action    String
  userId    String
  timestamp DateTime @default(now())
  ipAddress String?
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}